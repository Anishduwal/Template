<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/bootstrap/bootstrap.min.css")" rel="stylesheet" />
    <link rel="shortcut icon" href="@Url.Content("~/assets/hungry4food updated.png")" type="image/x-icon">
    <link href="@Url.Content("~/Content/navFooter.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />

</head>
<body>
    
    <div class="container-fluid body-content">
        @{
            ViewBag.Title = "Header";
        }


        <header class="fixed-top">
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #ffffff;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03"
                        aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="index.html">

                    <img style="height: 60px; width: 120px" src="@Url.Content("~/assets/logo-23.png")" alt="restaurant-logo" />

                </a>

                <div class="collapse navbar-collapse ml-4 justify-content-lg-end" id="navbarTogglerDemo03">
                    <ul class="navbar-nav ">
                        <li class="nav-item active">
                            <a class="nav-link" href="index.html">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./pages/restaurantslist.html">All Restaurants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./pages/aboutus.html">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./pages/menu.html">Order Now</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./pages/deals.html">Deals & Coupons</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./pages/login.html">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="./pages/register.html">Register</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex align-items-center">
                    <a class="nav-link p-0 mr-lg-5" style="cursor: pointer;" onClick="openCart()">
                        <i class="fas fa-shopping-cart fa-lg bg-col-grey"></i>
                        <span class="cart_count">3</span>
                    </a>
                </div>
            </nav>

            <section class="top-section bg-dark d-lg-none">
                <div class="d-flex justify-content-center">
                    <div class="order-now">
                        <a class="nav-link text-white" href="./pages/menu.html">Order Now</a>
                    </div>
                    <div class="sign">
                        <a class="nav-link text-white" href="./pages/login.html">Sign In</a>
                    </div>
                </div>
            </section>
        </header>
        <br />

        @RenderBody()

        <br />

        @{
            ViewBag.Title = "Footer";
        }



        <!----------------------------------------------FOOTER SECTION------------------------------------------------------------->
        <footer class="footer py-4" style="background-color: #000000;">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 about__img d-flex justify-content-center mx-auto">                       
                         <img src="@Url.Content("~/assets/logo-23.png")" alt="hungry4foodlogo" style="width: 90px;" height="90px;">

                    </div>
                    <div class="col-md-10 text-justify">
                        <p class="text-muted mt-1" style="font-size: small;">
                            <i class="fas fa-info-circle bg-cols"></i> LEGAL INFO: Online Order Service is
                            provided by Hungry4food.com a subsidiary of Noble Idea Solution LLC. Payment charged on your
                            credit card statement is payment to food and services purchased from your restaurant.
                            Charge-back fees applied for valid purchased will be responsibility of cardholder. Any Delivery
                            Charge is not a tip paid to your driver. Please reward your driver for awesomeness. Delivery
                            charge and tax may apply. Prices, participation, delivery area and charges may vary. Returned
                            checks, along with the state maximum allowable returned check fee, may be electronically
                            presented to your bank.
                        </p>
                    </div>
                    <div class="footer__inner w-100 pt-1 row mt-3"></div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <p class="text-white mt-5 font-weight-bold footer__heading">
                            Hungry4Food
                        </p>

                        <p class=" text-white m-0 p-0">
                            rspiciatis unde omnis iste natus error sit voluptatem accusantium
                            doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi
                            architecto beatae vitae dicta sunt explicabo. Nemo eni
                        </p>

                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <p class="text-white mt-5 font-weight-bold footer__heading">
                            Quick links
                        </p>
                        <ul class="m-0 p-0">
                            <li class="mt-4">
                                <a href="#" class="text-white">Home</a>
                            </li>
                            <li class="mt-2">
                                <a href="#" class="text-white">About</a>
                            </li>
                            <li class="mt-2">
                                <a href="#" class="text-white">Order Now</a>
                            </li>
                            <li class="mt-2">
                                <a href="#" class="text-white">Open Hours</a>
                            </li>
                            <li class="mt-2">
                                <a href="#" class="text-white">Reserve a Table</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <p class="text-white mt-5 font-weight-bold footer__heading">
                            FIND US
                        </p>
                        <ul class="d-flex flex-column m-0 p-0">
                            <li class="mt-4">
                                <a href="#" class="text-white display-5 text-underline d-flex align-items-center">
                                    <i class="fa fa-envelope bg-cols"></i>
                                    <span class="pl-3">info@restaurant.com</span>
                                </a>
                            </li>
                            <li class="mt-4">
                                <a href="#" class="text-white d-flex align-items-center">
                                    <i class="fa fa-phone bg-cols"></i>
                                    <span class="pl-3">0128012345678</span>
                                </a>
                            </li>
                            <li class="mt-4">
                                <a href="#" class="text-white d-flex align-items-center">
                                    <i class="fa fa-map-marker bg-cols"></i>
                                    <span class="pl-3">
                                        Nebraska, United States
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-12 col-md-6 col-lg-3">
                        <p class="text-white mt-5 font-weight-bold footer__heading">
                            FOLLOW US
                        </p>

                        <div class="footer__social pt-3 d-flex align-items-center justify-content-between">
                            <a href="#">
                                <i class="fab fa-facebook fa-2x bg-cols"></i>
                            </a>
                            <a href="#">
                                <i class="fab fa-instagram fa-2x bg-cols"></i>
                            </a>
                            <a href="#">
                                <i class="fab fa-twitter fa-2x bg-cols"></i>
                            </a>
                            <a href="#">
                                <i class="fab fa-youtube fa-2x bg-cols"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="container d-flex mt-5 align-items-center justify-content-between mx-auto">
                    <div class="footer__inner w-100 pt-1 row">

                        <div class="text-muted col-12  text-center mt-5 mt-md-1 mb-0">
                            For food related queries, contact
                            <strong>0987654321</strong>
                        </div>
                        <div class="text-muted col-12  text-center mt-md-1">
                            For website/payment related queries, contact
                            <strong>0987654321</strong>
                        </div>
                        <div class="text-white col-12  text-center mt-5 mt-md-3">
                            <span class="bg-cols"> hungry4food.com </span> &copy; 2021. All Rights Reserved.
                            <strong>Terms of use</strong> and
                            <strong>Privacy Policy</strong>
                        </div>
                    </div>
                </div>
            </div>



        </footer>

        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/popper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.ripples.min.js")"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
