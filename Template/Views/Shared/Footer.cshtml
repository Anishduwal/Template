@model Template.Models.Restaurant

@{
    ViewBag.Title = "Footer";
}



<!----------------------------------------------FOOTER SECTION------------------------------------------------------------->
<footer class="footer py-4" style="background-color: #000000;">
    <div class="container">
        <div class="row">
            <div class="col-md-2 about__img d-flex justify-content-center mx-auto">
                @if (Model != null && Model.support_logo_name != null)
            {
                <img src="@Url.Content(Model.support_logo_path + Model.support_logo_name)" alt="hungry4foodlogo" style="width: 90px;" height="90px;">

            }
            </div>
